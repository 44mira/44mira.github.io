---
import Donut from "./Donut.astro"

const roles = [
  "software developer",
  "data engineer",
  "computer scientist",
]

---

<div class="flex md:flex-row flex-col gap-16 justify-center items-center overflow-clip min-h-screen snap-center">
  <div class="flex flex-col gap-2">
    <h1 class="lg:text-8xl md:text-7xl text-header text-secondary text-stroke-primary">
      legolas tyrael lada
    </h1>
    <ul class="lg:text-5xl md:text-4xl text-primary">
      {roles.map(e => <li>* {e}</li>)}
    </ul>
  </div>
  <div>
    <Donut />
  </div>
</div>

